<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:i18n="clr-namespace:GodAndMe" xmlns:local="clr-namespace:GodAndMe" xmlns:resX="clr-namespace:GodAndMe.Resx" x:Class="GodAndMe.Views.DiaryDetailPage" Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="{resX:TranslateExtension Edit}" Clicked="EditItem_Clicked">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="UWP" Value="edit.png" />
                </OnPlatform>
            </ToolbarItem.Icon>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="5" Padding="15">
                <Label Text="{resX:TranslateExtension Type}" Style="{StaticResource LabelTitle}" />
                <Label Text="{Binding Item.DiaryTypeText}" Style="{StaticResource LabelValue}" />
                <Label Text="{resX:TranslateExtension Description}" Style="{StaticResource LabelTitle}" />
                <Label Text="{Binding Item.Description}" Style="{StaticResource LabelValue}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>